<UserControl x:Class="ClientWPF.Elements.Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientWPF.Elements"
             mc:Ignorable="d" MouseDoubleClick="OpenOrSend_Click">
    <Border Background="#212529" CornerRadius="5">
        <Grid>
            <Grid HorizontalAlignment="Left">
                <Image Source="/Images/file.png" Height="50px" Width="50px" Margin="10" x:Name="FolderIcon"/>
                <Image Source="/Images/directory.png" Height="50px" Width="50px" Margin="10" x:Name="FileIcon"/>
            </Grid>
            <Label x:Name="NameElement" Margin="70,10,10,10" Foreground="#dee2e6" VerticalContentAlignment="Center" Content="Directory variant" FontSize="16" FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
